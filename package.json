{
  "name": "@giotramu/css-kit",
  "version": "2.1.0",
  "description": "Personal CSS library that provides consistent, cross-browser and useful defaults.",
  "author": "giotramu <https://twitter.com/giotramu>",
  "homepage": "https://github.com/giotramu/css-kit#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/css-kit.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/css-kit/issues"
  },
  "engines": {
    "node": ">=10.x",
    "npm": ">=6.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "css-kit.css",
  "types": "typings/css-kit.d.ts",
  "files": [
    "font/",
    "css-kit.css",
    "custom-media.css"
  ],
  "scripts": {
    "lint:css": "stylelint ./src/**/*.scss --ignore-path .gitignore --fix",
    "lint": "npm run lint:css",
    "build": "postcss ./src/*.scss --dir ./ --ext css",
    "watch": "postcss ./src/*.scss --dir ./demo --watch --ext css",
    "serve": "serve ./demo -u -l 3333",
    "dev": "run-p -clns watch serve"
  },
  "devDependencies": {
    "@giotramu/postcss-config": "^2.4.0",
    "@giotramu/stylelint-config": "^2.3.0",
    "husky": "^4.2.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "serve": "^11.3.0",
    "stylelint": "^13.3.2",
    "stylelint-scss": "^3.17.0"
  },
  "keywords": [
    "css",
    "css-reset",
    "normalize-css",
    "sanitize-css"
  ]
}
