{
  "name": "@giotramu/css-kit",
  "version": "2.1.0",
  "description": "Personal CSS library that provides consistent, cross-browser and useful defaults.",
  "author": "giotramu <https://twitter.com/giotramu>",
  "homepage": "https://github.com/giotramu/css-kit#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/css-kit.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/css-kit/issues"
  },
  "engines": {
    "node": ">=10.x",
    "npm": ">=6.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "types": "typings/css-kit.d.ts",
  "files": [
    "font/",
    "common.css",
    "custom-media.css",
    "normalizer.css"
  ],
  "scripts": {
    "lint": "stylelint ./src/**/*.scss",
    "build": "postcss ./src/*.scss --dir ./ --ext css",
    "build:watch": "postcss ./src/*.scss --dir ./demo --ext css --watch",
    "serve": "serve ./demo -l 3333",
    "dev": "run-p -lns build:watch serve"
  },
  "devDependencies": {
    "@giotramu/postcss-config": "^2.3.1",
    "@giotramu/stylelint-config": "^2.3.0",
    "husky": "^4.2.3",
    "postcss-cli": "^7.1.0",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "serve": "^11.3.0",
    "stylelint": "^13.3.2",
    "stylelint-scss": "^3.17.0"
  },
  "keywords": [
    "css",
    "css-reset",
    "normalize-css",
    "sanitize-css"
  ]
}
