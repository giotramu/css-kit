{
  "name": "@giotramu/css-kit",
  "version": "2.4.1",
  "description": "A tiny CSS scaffold for quick, consistent, and scalable user interface development.",
  "author": "giotramu <https://twitter.com/giotramu>",
  "homepage": "https://github.com/giotramu/css-kit#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/css-kit.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/css-kit/issues"
  },
  "engines": {
    "node": ">=12.x",
    "npm": ">=6.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "css-kit.css",
  "types": "typings/css-kit.d.ts",
  "files": [
    "color-scheme-switcher.js",
    "css-kit.css",
    "font/",
    "src/styles/utils/",
    "typings/"
  ],
  "scripts": {
    "check:src": "tsc --noEmit",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint:src": "eslint . --ext .js,.ts",
    "lint": "run-s -cln lint:*",
    "build:css": "postcss ./src/styles/*.scss --ext css",
    "build:ts": "tsc",
    "clean": "rimraf ./css-kit.css ./color-scheme-switcher.js",
    "prebuild": "npm run clean",
    "build": "run-s \"build:css -- --dir .\" \"build:ts -- --outDir .\"",
    "watch:css": "watch \"npm run build:css -- --dir ./docs\" ./src/styles",
    "watch:ts": "npm run build:ts -- --outDir ./docs -w",
    "serve": "serve ./docs -u -l 3333",
    "dev": "run-p -cln watch:** serve"
  },
  "devDependencies": {
    "@giotramu/postcss-config": "^3.3.0",
    "@giotramu/stylelint-config": "^5.0.0",
    "eslint": "^7.8.1",
    "eslint-config-contactlab": "^5.0.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "stylelint": "^13.7.0",
    "stylelint-scss": "^3.17.2",
    "typescript": "^4.0.2",
    "watch": "^1.0.2"
  },
  "keywords": [
    "css-library",
    "pattern-library",
    "ui-components"
  ]
}
