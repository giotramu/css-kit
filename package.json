{
  "name": "@giotramu/css-kit",
  "version": "2.5.0",
  "description": "A tiny CSS scaffold for quick, consistent, and scalable user interface development.",
  "author": "giotramu <https://twitter.com/giotramu>",
  "homepage": "https://github.com/giotramu/css-kit#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/css-kit.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/css-kit/issues"
  },
  "engines": {
    "node": ">=12.x",
    "npm": ">=6.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "css-kit.css",
  "types": "typings/css-kit.d.ts",
  "files": [
    "color-scheme-switcher.js",
    "css-kit.css",
    "font/",
    "src/styles/utils/",
    "typings/",
    "CHANGELOG.md"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint:css": "stylelint ./src/**/*.scss",
    "lint:src": "eslint . --ext .js,.ts",
    "lint": "run-s -cln lint:*",
    "test": "npm run lint",
    "build:css": "postcss ./src/styles/*.scss --ext css",
    "build:tsc": "tsc",
    "clean": "rimraf ./css-kit.css ./color-scheme-switcher.js",
    "prebuild": "npm run clean",
    "build": "run-s \"build:css -- --dir .\" \"build:tsc -- --outDir .\"",
    "clean:www": "rimraf ./www/css-kit.css ./www/color-scheme-switcher.js",
    "prebuild:www": "npm run clean:www",
    "build:www": "run-s \"build:css -- --dir ./www\" \"build:tsc -- --outDir ./www\"",
    "watch:css": "watch \"npm run build:css -- --dir ./www\" ./src/styles",
    "watch:tsc": "npm run build:tsc -- --outDir ./www -w",
    "serve": "serve ./www -l 3333",
    "dev": "run-p -cln watch:** serve"
  },
  "prettier": "@giotramu/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "prettier -w -u",
    "*.{ts,tsx}": "eslint --fix",
    "*.{css}": "stylelint --fix"
  },
  "devDependencies": {
    "@giotramu/postcss-config": "^3.4.1",
    "@giotramu/prettier-config": "^1.1.0",
    "@giotramu/stylelint-config": "^5.1.0",
    "eslint": "^7.14.0",
    "eslint-config-contactlab": "^5.0.0",
    "eslint-config-prettier": "^7.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "stylelint": "^13.7.2",
    "stylelint-scss": "^3.18.0",
    "typescript": "^4.1.2",
    "watch": "^1.0.2"
  },
  "keywords": [
    "css-library",
    "pattern-library",
    "ui-components"
  ]
}
